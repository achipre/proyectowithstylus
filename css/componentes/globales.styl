fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sans-serif
color-primario = #333
color-secundario = #8841d8a
color-claro = #fff

//Mixing
contenedor()
  display: flex
  width 90%
  margin: 0 auto
  padding: 30px 0

//Funciones
opacidad(color, cantidad)
  alpha(color, cantidad)

caja-sombra()
  background-color: color-claro
  box-shadow: 0 20px 33px 0 rgba(0,0,0,0.2)

//Loop
for header in 3 2 1
  h{header}
    font-size: 35px - (5*header)
    margin: 0

//Condicional

titulos(fuente)
  if fuente == fuente1
    font-family: fuente1
  else
    font-family: fuente2
    font-weight: 600
    text-transform: uppercase


//Codigo
* 
  box-sizing: border-box

body 
  margin: 0
  titulos(fuente1)
  color: color-primario